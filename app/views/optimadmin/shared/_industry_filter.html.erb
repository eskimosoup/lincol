<%= form_tag '', method: :get do %>
  <%= hidden_field_tag :per_page, params[:per_page] %>
  <%= hidden_field_tag :order, params[:order] %>
  <%= hidden_field_tag :search, params[:search] %>
  <%= select_tag :industry_id, options_for_select(Industry.all.map{|x| [x.name, x.id]}, selected: params[:industry_id]),
  class: 'submit-on-change', prompt: 'Industry filter' %>
<% end %>
