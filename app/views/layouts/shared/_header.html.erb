<div class="sticky-contact contrast-area transformed border-bottom">
  <%= link_to '#', class: 'toggle-class', data: { container: '.sticky-contact', class: 'transformed', return: 'false' } do %>
    Contact Us
  <% end %>

  <div class="sticky-contact-expanded">
    <%= render 'contacts/shared/sidebar_form' %>
  </div>
</div>

<header class="row collapse content-area">
  <div class="border-wrap">
    <div class="small-12 text-center medium-2 columns">
      <%= logo_link @industry %>
    </div>

    <div class="small-12 medium-10 columns">
      <div class="header-introduction">
        <div class="tagline">
          "Supplying a wide range of lubricants for over <span class="years-emphasis">100 years</span>"
        </div>

        <div class="call text-right">
          <div class="text">
            Place your
            <strong class="display-block">order today</strong>
          </div>
          <div class="number color">
            <%= global_site_settings['Phone'] %>
          </div>
        </div>
      </div>

      <div class="header-navigation">
        <%= link_to '#', class: 'show-for-small toggle-class menu-toggle', data: { container: '.primary.navigation', class: 'hide-for-small', return: 'true' } do %>
         <span class="menu-icon">Menu</span>
        <% end %>

        <ul class="primary navigation hide-for-small">
          <%= @industry.home_link if @industry.present? %>
          <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
        </ul>
      </div>
    </div>
  </div>
</header>
