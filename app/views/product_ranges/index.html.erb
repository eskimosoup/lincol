<div class="row">
  <div class="small-12 columns content-area">
    <%= render 'industries/header', industry: @industry if @industry.present? %>

    <div class="inner">
      <ul class="breadcrumbs">
        <li>
          <%= link_to 'Home', root_url %>
        </li>

        <li>
          <%= link_to @industry.name, @industry.link %>
        </li>

        <li>
          <span class="current">Product Ranges</span>
        </li>
      </ul>
    </div>

    <div class="inner padded">
      <div class="text-center">
        <div class="page-title-header">
          <%= @industry.name %>
        </div>
      </div>

      <div class="row">
        <div class="small-12 medium-3 columns">
          <ul class="navigation sidebar">
            <%= nested_menu_items(menu_items: @static_page_menu_items) %>
          </ul>
        </div>

        <div class="small-12 medium-9 columns">
          <div class="text-center clearfix">
            <%= render partial: 'product_ranges/product_range',
                collection: BaseCollectionPresenter.new(collection: @industry.displayable_product_ranges, view_template: self, presenter: ProductRangePresenter),
                as: :product_range_presenter
              %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
