<div class="row">
  <div class="small-12 columns content-area">
    <div class="inner">
      <ul class="breadcrumbs">
        <li>
          <%= link_to 'Home', root_url %>
        </li>

        <li>
          <span class="current">Team Members</span>
        </li>
      </ul>
    </div>

    <div class="inner padded text-center">
      <h1 class="page-title-header">
          <%= @additional_content.title('Team Members') %>
      </h1>

      <div class="inner-content-area">
        <%= @additional_content.content %>
      </div>


      <% @team_members.each do |group, team_members| %>
        <h2 class="team-members-job-title"><%= group %></h2>

        <% team_members.each do |team_member| %>
          <%= render 'team_members/team_member', team_member_presenter: TeamMemberPresenter.new(object: team_member, view_template: self) %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
