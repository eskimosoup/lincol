<div class="row">
  <div class="small-12 columns content-area">
    <%= render 'industries/header', industry: @industry if @industry.present? %>

    <div class="inner">
      <ul class="breadcrumbs">
        <li>
          <%= link_to 'Home', root_url %>
        </li>

        <li>
          <%= link_to @industry.name, @industry.link %>
        </li>

        <li>
          <span class="current">General Downloads</span>
        </li>
      </ul>
    </div>

    <div class="inner padded">
      <div class="row">
        <div class="small-12 medium-3 columns">
          <ul class="navigation sidebar">
            <%= nested_menu_items(menu_items: @static_page_menu_items) if @static_page_menu_items.present? %>
          </ul>
        </div>

        <div class="small-12 medium-9 columns">
          <div class="text-center">
            <div class="page-title-header">
              <%= two_tone_title @additional_content.title if @additional_content.present? && @additional_content.title.present? %>
            </div>
          </div>

          <%= @additional_content.content if @additional_content.present? %>

          <div class="text-center clearfix">
            <%= render partial: 'general_downloads/general_download',
                collection: BaseCollectionPresenter.new(collection: @general_downloads, view_template: self, presenter: GeneralDownloadPresenter),
                as: :general_download_presenter if @general_downloads.present?
              %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
